{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "module": "Node16",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": ["./src/types"]
  },
  "include": ["src"]
}
